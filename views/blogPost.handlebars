{{#with blogPost}}
    <section class="border-bottom border-secondary pb-3">
        {{> blogPostDetails}}
    </section>
{{/with}}
<section class="pt-3">
    <h2>Comments:</h2>
    <ol id="commentsList" class="list-group list-group-flush">
        {{#each blogPost.Comments}}
            <li class="list-group-item">
                <h3 class="fs-5">#{{inc @index}}. By {{User.username}} on {{format_date createdAt}}</h3>
                <p>{{text}}</p>
            </li>
        {{/each}}
    </ol>
    {{#if userId}}
        <form>
            <h2>Add Comment:</h2>
            <div class="row mt-3">
                <textarea id="newCommentTextarea" class="form-input" rows="8"></textarea>
            </div>
            <div class="row mt-3">
                <button id="newCommentButton" type="submit" class="btn btn-secondary">Submit</button>
            </div>
            <p id="newCommentFeedback" class="form-text mt-3"></p>
        </form>
    {{/if}}
</section>
<input id="usernameInput" type="hidden" value="{{blogPost.User.username}}">
<script src="/js/newCommentScript.js"></script>